{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "jsx": "react-native",
    "incremental": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@appTypes/*": ["./appTypes/*"],
      "@assets/*": ["./assets/*"],
      "@components": ["./components"],
      "@navigators/*": ["./navigators/*"],
      "@screens/*": ["./screens/*"],
      "@utils/*": ["./utils/*"],
      "@constants/*": ["./constants/*"],
      "@redux/*": ["./redux/*"],
      "@services/*": ["./services/*"]
    },
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strictNullChecks": false
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "forceConsistentCasingInFileNames": true,
  "buildOnSave": true
}
